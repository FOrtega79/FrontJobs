<div class="container">
<h2>Hey,{{user.username}} welcome to your profile</h2>

<h3>Your saved Job Offers:</h3>
{{#each favOffers}}
<div class="card" style="width: 30rem;">
  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{this.location}}</h6>
    <p class="card-text">{{this.description}}</p>
    <a href={{this.redirect_url}} target="_blank"><button
      class="btn-apply">Apply  <i class="fas fa-external-link-alt"></i></button></a>
    <a href="#" class="card-link"><button
      class="btn-delete"><i class="far fa-trash-alt"></i></button></a>
  </div>
</div>
{{/each}}

<a href="/"><button class="btn-save">Search Jobs <i class="fas fa-search"></i></button></a>
<a href="/auth/logout"><button class="btn-logout">Log out! <i class="fas fa-power-off"></i></button></a>
{{! power off font awesome icon }}
<a href="/"><button class="btn-delete">Delete account <i class="fas fa-user-times"></i></button></a>
{{! Dustbin font awesome icon }}
</div>{{!-- end container --}}

